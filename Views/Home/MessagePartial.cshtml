@using theWall.Models
@model Message

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
    integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
<link rel="stylesheet" href="~/css/site.css"/>
<body>
<div class="container">
    <form asp-action="postMessage" asp-controller="Home" method="post">
        <div class="form-group">
            <label for="message">
                <h4>Post a message:</h4>
            </label>
            <input type="text" class="form-control" name="message"
                placeholder="Post a message on Private Wall forum!">
            <input type="hidden" name="UserId" value="@ViewBag.current.UserId">
        </div>
        <button type="submit" class="btn btn-primary">Post a message</button>
    </form>
</body>